{
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.test.ts"
    ],
    "compilerOptions": {
        "module": "umd",
        "target": "esnext",
        "lib": [
            "esnext",
            "DOM"
        ],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src"
    }
}